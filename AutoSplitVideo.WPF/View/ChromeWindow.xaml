<Window x:Class="AutoSplitVideo.View.ChromeWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
		Height="450" Width="1080" WindowStartupLocation="CenterOwner" Closed="ChromeWindow_OnClosed">
	<Grid>
		<DockPanel>
			<Grid DockPanel.Dock="Top" Visibility="Visible">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Button Content="登录成功未自动跳转" Margin="5" Padding="3" Click="ButtonBase_OnClick"/>
			</Grid>
			<WindowsFormsHost>
				<forms:PictureBox x:Name="PictureBox" />
			</WindowsFormsHost>
		</DockPanel>
	</Grid>
</Window>
