<Window x:Class="AutoSplitVideo.View.ChromeWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
		Height="450" Width="1080" WindowStartupLocation="CenterOwner">
	<Grid>
		<DockPanel>
			<Grid DockPanel.Dock="Top" Visibility="Visible">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Button Content="登录成功未自动跳转" Margin="5" Padding="3" Click="ButtonBase_OnClick"/>
			</Grid>
			<wpf:ChromiumWebBrowser Address="https://passport.bilibili.com/login" FrameLoadEnd="Browser_OnFrameLoadEnd"/>
		</DockPanel>
	</Grid>
</Window>
